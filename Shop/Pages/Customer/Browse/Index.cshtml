@page "{CustId:int}"
@model Shop.Pages.Customer.Browse.IndexModel

@{
    ViewData["Title"] = "Browse";

    Layout = "LayoutCustomer";
    ViewData["CustId"] = Model.CustId;
}

<h1>Browse</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Item) {
        <tr>
            <td class="browse-item-name">
                <div class="browse-item-info">@Html.DisplayFor(modelItem => item.Name)</div>
            </td>
            <td class="browse-item-category">
                <div class="browse-item-info">@Html.DisplayFor(modelItem => item.Category)</div>
            </td>
            <td class="browse-item-price">
                <div class="browse-item-info">@Html.DisplayFor(modelItem => item.Price)</div>
            </td>
            <td class="browse-item-amount">
                <div class="browse-item-info">@Html.DisplayFor(modelItem => item.Amount)</div>
            </td>
            <td>
                <div class="browse-item-info"><a asp-page="./Details" asp-route-id="@item.Id" asp-route-CustId="@Model.CustId">View</a></div>
            </td>
        </tr>
}
    </tbody>
</table>
