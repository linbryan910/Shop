@page "{CustId:int}"
@model Shop.Pages.Customer.Browse.DetailsModel

@{
    ViewData["Title"] = "Details";

    Layout = "LayoutCustomer";
    ViewData["CustId"] = Model.CustId;
}

<h1>Details</h1>

<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.ImageSource)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.Item.ImageSource" width="100" height="100"/>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Amount)
        </dd>
    </dl>
</div>

<form method="post">
    <input type="text" asp-for="CartItem.Amount"/>
    <input type="submit" value="Add to Cart"/>
</form>

<div>
    <a asp-page="./Index" asp-route-CustId="@Model.CustId">Back to List</a>
</div>
